#! /usr/bin/env ruby
# coding: utf-8
#
# USAGE: linesub [options] str0 str1 files ...

require "pp"
require "optparse"
require "rubygems"
#gem "tefil"
require "tefil.rb"

## option analysis
OPTIONS = {}
op = OptionParser.new
op.banner = [
    "Usage: #{File.basename("#{__FILE__}")} old_str new_str [options] [files]",
].join("\n")
op.on("-o"    , "--overwrite"    , "Overwrite."){    OPTIONS[:overwrite] = true}
op.on("-g"    , "--global"    , "Globally substitute."){    OPTIONS[:global] = true}
op.parse!(ARGV)

OLD_STR = ARGV.shift
NEW_STR = ARGV.shift

module Tefil
  def self.process_stream(in_io, out_io)
    in_io.each do |line|
      if OPTIONS[:global]
        out_io.puts line.gsub(OLD_STR, NEW_STR)
      else
        out_io.puts line.sub(OLD_STR, NEW_STR)
      end
    end
  end
end

OPTIONS[:overwrite] ||= false

Tefil.run(ARGV, OPTIONS[:overwrite])
